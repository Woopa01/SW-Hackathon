<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/new_child_title"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="25sp"
        android:text="Create
Account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/new_child_profile_img"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_child_title"
        android:src="@drawable/default_profile_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="40dp"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@id/new_child_title"
        app:layout_constraintStart_toEndOf="@id/new_child_profile_img"
        android:text="프로필 사진을 등록해주세요."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <EditText
        android:id="@+id/new_child_name_input"
        android:backgroundTint="#000"
        android:layout_marginTop="50dp"
        android:textSize="13sp"
        android:hint="이름을 입력해주세요."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_child_profile_img"
        android:layout_width="330dp"
        android:layout_height="40dp" />

    <EditText
        android:id="@+id/new_child_number_input"
        android:backgroundTint="#000"
        android:textSize="13sp"
        android:hint="전화번호를 입력해주세요."
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_child_name_input"
        android:layout_width="330dp"
        android:layout_height="40dp" />

    <Button
        android:textSize="20sp"
        android:text="확인"
        android:background="@drawable/newchild_button_shape"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_child_number_input"
        android:layout_width="330dp"
        android:layout_height="70dp" />

    
    
        
</android.support.constraint.ConstraintLayout>