<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    tools:layout_editor_absoluteY="25dp">

    <ImageView
        android:id="@+id/item_noti_profile_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:src="@drawable/default_profile_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_noti_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="이종현 님이 학교에 도착하였습니다."
        android:textSize="13dp"
        app:layout_constraintStart_toEndOf="@id/item_noti_profile_img"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_noti_time"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/clock_circular_outline"
        app:layout_constraintStart_toEndOf="@id/item_noti_profile_img"
        app:layout_constraintTop_toBottomOf="@id/item_noti_log" />

    <TextView
        android:id="@+id/item_noti_log_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:text="8월 28일 화요일"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@id/item_noti_time"
        app:layout_constraintTop_toBottomOf="@id/item_noti_log" />

    <ImageView
        android:visibility="invisible"
        android:src="@drawable/outline_notification_important_red"
        android:id="@+id/item_warn_img"
        android:layout_marginRight="15dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>