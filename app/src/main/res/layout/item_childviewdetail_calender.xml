<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/item_childview_phone_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_childview_cal_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:text="2018.08.30"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/item_childview_phone_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/item_childview_cal_address_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:text="대전광역시 유성구 가정북로 76
(대덕소프트웨어마이스터고등학교 우정관)"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/item_childview_phone_img"
        app:layout_constraintTop_toBottomOf="@id/item_childview_cal_date_text" />

    <EditText
        android:backgroundTint="@null"
        android:background="@null"
        android:textSize="13sp"
        android:layout_width="287dp"
        android:layout_height="36dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:hint="일정 이름을 입력해주세요."
        app:layout_constraintStart_toEndOf="@id/item_childview_phone_img"
        app:layout_constraintTop_toBottomOf="@id/item_childview_cal_address_text" />


</android.support.constraint.ConstraintLayout>